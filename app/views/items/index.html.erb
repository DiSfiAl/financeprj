<p style="color: green"><%= notice %></p>
  <h2>Items</h2>
  <div class="table-responsive ">
    <table class="table table-hover  table-striped-columns table-sm">
      <thead class=" text-light table-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Transaction date</th>
          <th scope="col">Updated at date</th>
          <th scope="col">Buttons</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
        <tbody id='items'>     
          <%= render item %>
          <td class="col--5"> 
            <%= link_to  item  do %>
              <button type="button" class="btn btn-success me-0">Show this item</button>
            <% end %>
          </td>   
        </tbody>
      <% end %>
    </table>
    <%= link_to  new_item_path do %>
      <button type="button" class=" col-12 btn btn-success me-0 justify-content-center "> New item</button>
    <% end %>
</div>


